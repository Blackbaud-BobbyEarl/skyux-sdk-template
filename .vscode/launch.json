    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SKY Pages",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}/../sky-pages-cli/bin/sky-pages.js",
            "stopOnEntry": false,
            "args": ["build"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
